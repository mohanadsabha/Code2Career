generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  ADMIN
  COACH
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role   @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  courses   Course[]  @relation("OwnedCourses")
  enrolledCourses Course[] @relation("StudentCourses")
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     Int      @map("owner")
  owner       User      @relation("OwnedCourses", fields: [ownerId], references: [id], onDelete: Cascade)
  students    User[]    @relation("StudentCourses")
}
