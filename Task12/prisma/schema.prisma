generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Role {
  ADMIN
  OWNER
  GUEST
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  role      Role      @default(GUEST)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  rooms     Room[]    // Rooms owned by this user (if Owner)
  bookings  Booking[] // Bookings made by this user (if Guest)
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  capacity    Int
  ownerId     Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  owner     User      @relation(fields: [ownerId], references: [id])
  bookings  Booking[]
}

model Booking {
  id        Int           @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  status    BookingStatus @default(CONFIRMED)
  totalPrice Float
  guestId   Int
  roomId    Int
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relations
  guest     User @relation(fields: [guestId], references: [id])
  room      Room @relation(fields: [roomId], references: [id])
}